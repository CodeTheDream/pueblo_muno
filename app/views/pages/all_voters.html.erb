<a name="top"></a>

<div class="container">
  <div class="bg-txt">
    Scroll to:
    <a href="#voters">Voters</a>
  </div>

  <div class="bg-txt">Total: <%= User.count %></div>

  <% @voters.each do |group| %>
    <% if group.first == 0 %>
      <div class="bg-txt">Non-voters (<%= group.first %> votes): <%= group.last.count %></div>
    <% else %>
      <a name="voters"></a>
      <div class="bg-txt">Voters (<%= pluralize group.first, 'vote' %>): <%= group.last.count %></div>
      <div class="bg-txt">
        Scroll to:
        <a href="#top">Top</a>
      </div>
    <% end %>
    <div class="flex-container justify-between wrap">
      <% group.last.each do |user| %>
        <div class="user-card self-start">
          <%= user_info_2 user %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="bg-txt">
    Scroll to:
    <a href="#top">Top</a> |
    <a href="#voters">Voters</a>
  </div>
</div>
