<div id="total" class="flex-container white xy-center <%= total_class %>">TOTAL: $<%= total %></div>

<div class="flex-container justify-around wrap-mobile">
  <div class="flex-container flex-column dish white xy-center">
    <h3 class="flex-container xy-center">
      Entree: $<%= Dish.price entree: params[:entree].to_s %>
    </h3>
    <%= render 'dish_options', priority: :entree, str: params[:entree].to_s %>
  </div>
  <div class="flex-container flex-column dish white xy-center">
    <h3 class="flex-container xy-center">
      Dessert: $<%= Dish.price dessert: params[:dessert].to_s %>
    </h3>
    <%= render 'dish_options', priority: :dessert, str: params[:dessert].to_s %>
  </div>
  <div class="flex-container flex-column dish white xy-center">
    <h3 class="flex-container xy-center">
      Drink: $<%= Dish.price drink: params[:drink].to_s %>
    </h3>
    <%= render 'dish_options', priority: :drink, str: params[:drink].to_s %>
  </div>
</div>

<%= form_for @vote do |f| %>
  <%= f.hidden_field :entree, value: params[:entree].to_s %>
  <%= f.hidden_field :dessert, value: params[:dessert].to_s %>
  <%= f.hidden_field :drink, value: params[:drink].to_s %>
  <div class="flex-container justify-end container">
    <% if total == 0 %>
      <%= f.submit 'Submit', class: 'submit disabled pure-button pure-button-primary', title: 'You have chosen nothing', disabled: true %>
    <% elsif total > 100 %>
      <%= f.submit 'Submit', class: 'submit disabled pure-button pure-button-primary', style: 'float:right;cursor:not-allowed;', title: 'Too expensive', disabled: true %>
    <% else %>
      <%= f.submit 'Submit', data: {confirm: 'Is this your final answer?', disable_with: 'Please wait...'}, class: 'pure-button pure-button-primary', style: 'float:right;' %>
    <% end %>
  </div>
<% end %>
