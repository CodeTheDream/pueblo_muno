<div style="background: gray; height: 40px;" class="flex-container white xy-center">TOTAL: $<%= total %></div>
<div class="flex-container justify-between">
  <div class="flex-container flex-column dish white xy-center">
    <div class="flex-container xy-center" style="height: 40px;">
      Entree: $<%= Dish.price entree: params[:entree].to_s %>
    </div>
    <%= render 'dish_options', priority: :entree, str: params[:entree].to_s %>
  </div>
  <div class="flex-container flex-column dish white xy-center">
    <div class="flex-container xy-center" style="height: 40px;">
      Dessert: $<%= Dish.price dessert: params[:dessert].to_s %>
    </div>
    <%= render 'dish_options', priority: :dessert, str: params[:dessert].to_s %>
  </div>
  <div class="flex-container flex-column dish white xy-center">
    <div class="flex-container xy-center" style="height: 40px;">
      Drink: $<%= Dish.price drink: params[:drink].to_s %>
    </div>
    <%= render 'dish_options', priority: :drink, str: params[:drink].to_s %>
  </div>
</div>
<!-- <div class="flex-container"> -->
  <%= form_for @vote do |f| %>
    <%= f.hidden_field :entree, value: params[:entree].to_s %>
    <%= f.hidden_field :dessert, value: params[:dessert].to_s %>
    <%= f.hidden_field :drink, value: params[:drink].to_s %>
    <% if total == 0 %>
      <%= f.submit 'Submit', data: {confirm: 'Is this your final answer?'}, style: 'float:right;cursor:not-allowed;', title: 'You have chosen nothing', disabled: true %>
    <% elsif total > 100 %>
      <%= f.submit 'Submit', data: {confirm: 'Is this your final answer?'}, style: 'float:right;cursor:not-allowed;', title: 'Too expensive', disabled: true %>
    <% else %>
      <%= f.submit 'Submit', data: {confirm: 'Is this your final answer?',disable_with: 'Please wait...'}, style: 'float:right;' %>
    <% end %>
  <% end %>
